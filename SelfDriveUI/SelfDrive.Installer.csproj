<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyTitle>SelfDrive Manager</AssemblyTitle>
    <AssemblyDescription>SFTP Drive Mounting Management UI</AssemblyDescription>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Company>SelfDrive</Company>
    <Product>SelfDrive Manager</Product>
    <Copyright>Copyright Â© 2025</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Management" Version="8.0.0" />
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="config-template.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="PowerShell\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\ConfigHelper.ps1" Link="PowerShell\ConfigHelper.ps1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\Install-CheapSelfDrive.ps1" Link="PowerShell\Install-CheapSelfDrive.ps1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\Mount-TEMPLATE-SFTPDisk.ps1" Link="PowerShell\Mount-TEMPLATE-SFTPDisk.ps1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\Set-Password.ps1" Link="PowerShell\Set-Password.ps1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\Uninstall-CheapSelfDrive.ps1" Link="PowerShell\Uninstall-CheapSelfDrive.ps1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SelfDrive.Systray\SelfDrive.Systray.csproj" />
  </ItemGroup>

</Project>